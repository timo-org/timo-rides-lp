---
import ServiceCard from "../molecules/ServiceCard.astro"
import Service1 from "../../assets/images/Service1-new.webp"
import Service2 from "../../assets/images/Service2-new.webp"
import Service3 from "../../assets/images/Service3-new.webp"
---

<section id="services" class="flex flex-col max-w-7xl mx-auto h-full mt-20 md:my-20">
     <div class="flex flex-col justify-center items-center max-w-4xl mx-auto text-center">
        <h2 class="text-4xl font-bold text-primary">
            Our Premium Car Services
        </h2>
        <p class="text-lg mt-2 text-slate-500 px-2">
            Experience luxury and reliability with our professional car ride services across South Africa.
        </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10 my-10 p-6 md:px-10">
            <ServiceCard label="City Travel" image={Service1} text="Rigorous driver screening and regular vehicle maintenance ensure your security."/>
            <ServiceCard label="Corporate Travel" image={Service2} text="Professional business transportation solutions."/>
            <ServiceCard label="Airport Transfers" image={Service3} text="Reliable airport transportation to and from all major airports"/>
        </div>
</section>