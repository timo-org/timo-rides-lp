---
import FAQ from "../molecules/FAQ.astro";
import { faqs } from "../../constant";
---

<section id="faqs" class="max-w-7xl mx-auto flex flex-col h-full">
    <div class="flex flex-col justify-center items-center max-w-4xl mx-auto text-center mt-20">
        <h2 class="text-4xl font-bold text-primary">
            Frequently Asked Questions
        </h2>
        <p class="text-lg mt-2 text-slate-500 px-2">
            Find answers to common questions about our premium transportation services.
        </p>
    </div>

    <div class="w-full max-w-3xl mx-auto my-16 px-4">
         {faqs.map((faq, index) => (
            <FAQ key={index} question={faq.question} answer={faq.answer} />
        ))}
    </div>
</section>