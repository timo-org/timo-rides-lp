---
import { Image } from 'astro:assets';
import HeroMain from '../../assets/images/HeroMain.webp';
import Link from '../atoms/Link.astro';
import { ChevronRight } from '@lucide/astro';
---
<section id="home" class="flex flex-col overflow-hidden h-screen">

  <div class="flex flex-col w-full h-full">

    <Image 
      src={HeroMain}
      sizes="100vw"
      alt="Hero image"
      class="absolute w-full h-full object-cover object-center top-0 left-0"
      loading="eager"
    />

    <div class="relative md:mt-18 flex flex-col justify-center items-center h-full space-y-5 max-sm:px-3">
      <h1 class="uppercase text-4xl md:text-6xl font-bold flex flex-col md:text-center">
        <span class="text-accent">Premium Rides</span>
        <span class="text-white">Across South Africa</span>
      </h1>
      <p class="text-xl text-white font-medium max-w-2xl md:text-center">
        Experience luxury transportation with professional drivers and premium vehicles.
      </p>
    </div>

    <div class="relative h-1/4 flex flex-col md:flex-row md:justify-between items-center justify-center bg-primary px-3 max-sm:text-center max-sm:py-3 max-sm:space-y-3 md:px-20 lg:px-40">
      <span class="uppercase text-bg tracking-wider font-bold text-3xl md:text-4xl">Need a Premium Ride?</span>
      <Link href={"#"} label="Book Now" classes='flex justify-center items-center bg-accent px-8 py-4 text-primary rounded-full font-bold gap-2 hover:bg-bg'>
        <ChevronRight slot={"icon"} size={14}/>
      </Link>
        
    </div>
  
  </div>
</section>