---
import { Image } from 'astro:assets';
import HeroMain from '../../assets/images/Hero.webp';
import Link from '../atoms/Link.astro';
import { ArrowRight } from '@lucide/astro';
---
<section id="home" class="max-w-7xl mx-auto overflow-hidden h-screen w-full px-4">

  

    <Image 
      src={HeroMain}
      
      alt="Hero image"
      class="absolute w-full h-full object-cover object-center top-0 left-0"
      loading="eager"
    />


    <div class="flex flex-col justify-center items-start animate-fadeIn relative h-full space-y-8">
      <div class="space-y-2">
        <h1 class="uppercase text-4xl md:text-6xl font-bold flex flex-col ">
          <span class="text-accent">Premium Rides</span>
          <span class="text-white">Across South Africa</span>
        </h1>
        <p class="text-xl text-white font-medium max-w-2xl">
          Enjoy luxury transport with professional drivers and top-tier vehicles. Pre-book now for a seamless, reliable, and personalized experience.
        </p>
      </div>
      <div class="flex max-sm:flex-col justify-center items-center gap-4 max-sm:w-full">
         <Link href='#' label='Book a Ride' classes='flex justify-center items-center gap-3 bg-primary px-5 py-3 font-bold text-bg rounded-full text-lg hover:bg-accent hover:text-primary transition duration-300 group max-sm:w-full border-2 border-primary'>
          <ArrowRight size={16} class="text-white group-hover:text-primary transition duration-300" slot={"icon"}/>
        </Link>
        <Link href='#' label='Become a Driver' classes='flex justify-center items-center border-2 border-accent px-5 py-3 font-bold text-bg rounded-full hover:bg-black/20 transition duration-300 text-lg max-sm:w-full'/>         
      </div>
    </div>

    <!-- <div class="animate-fadeIn relative h-1/4 flex flex-col md:flex-row md:justify-between items-center justify-center bg-primary px-3 max-sm:text-center max-sm:py-3 max-sm:space-y-3 md:px-20 lg:px-40">
      <span class="uppercase text-bg tracking-wider font-bold text-3xl md:text-4xl">Need a Premium Ride?</span>
      <Link href={"#"} label="Book Now" classes='flex justify-center items-center bg-accent px-8 py-4 text-primary rounded-full font-bold gap-2 hover:bg-bg'>
        <ChevronRight slot={"icon"} size={14}/>
      </Link>
        
    </div> -->
  

</section>