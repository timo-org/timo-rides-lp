---
import { Image } from 'astro:assets';
import HeroMain from '../../assets/images/HeroMain.png';
import Link from '../atoms/Link.astro';
import { ChevronRight } from '@lucide/astro';
---
<section id="home" class="flex flex-col overflow-hidden">

  <div class="w-full h-[620px]">

    <Image 
      src={HeroMain}
      sizes="100vw"
      alt="Hero image"
      class="absolute mt-18 w-full h-[620px] object-cover object-center top-0 left-0"
      loading="eager"
    />

    <div class="relative flex flex-col justify-center items-center h-full space-y-5">
      <h1 class="uppercase text-4xl md:text-6xl font-bold flex flex-col text-center">
        <span class="text-accent">Premium Rides</span>
        <span class="text-white">Across South Africa</span>
      </h1>
      <p class="text-xl text-white font-medium max-w-2xl text-center">
        Experience luxury transportation with professional drivers and premium vehicles.
      </p>
    </div>
  
  </div>

  <div class="bg-[#BFDBFE] py-12 px-3 max-sm:text-center max-sm:space-y-3 md:py-16 md:px-20 lg:px-40 flex flex-col md:flex-row md:justify-between items-center">
    <span class="uppercase text-primary tracking-wider font-bold text-3xl">Need a Premium Ride?</span>
    <Link href={"#"} label="Book Now" classes='flex justify-center items-center bg-accent px-5 py-2 text-primary rounded-full font-bold gap-2 hover:text-accent hover:bg-primary'>
      <ChevronRight slot={"icon"} size={14}/>
    </Link>
      
  </div>
</section>