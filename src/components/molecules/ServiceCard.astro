---
import { Image } from "astro:assets";
import Link from "../atoms/Link.astro";
const {label, image, text} = Astro.props;
---

<div class="flex flex-col bg-white shadow-xl rounded-xl pb-3">
  <div class="">
    <Image
        src={image}
        alt={"Service"}
        class="w-full rounded-t-xl"
    />
  </div>
  <div class="px-3 py-2">
    <h3 class="text-lg font-semibold text-primary">{label}</h3>
    <p class="text-slate-500">{text}</p>
    <Link href="#" label="Book Now" classes="flex justify-center items-center text-primary bg-accent p-2 mt-3 rounded-full font-semibold hover:text-accent hover:bg-primary shadow"/>
  </div>
</div>