---
// File: components/FaqItem.astro
import { ChevronDown, ChevronUp } from "@lucide/astro";
const { question, answer } = Astro.props;
---

<div class="border-b border-slate-300 py-4 max-w-3xl">
  <button 
    class="w-full flex justify-between items-center text-left font-medium text-primary cursor-pointer"
    onclick="const answer = this.parentElement.querySelector('.answer'); answer.style.maxHeight = answer.style.maxHeight ? '' : answer.scrollHeight + 'px'; answer.classList.toggle('expanded'); this.querySelector('.down').classList.toggle('hidden'); this.querySelector('.up').classList.toggle('hidden')"
  >
    <span class="flex-1 pr-4">{question}</span>
    <span class="flex-shrink-0">
      <ChevronDown size={16} class="down" />
      <ChevronUp size={16} class="up hidden" />
    </span>
  </button>
  <div class="answer mt-2 text-sm text-slate-500 overflow-hidden transition-all duration-300 max-h-0">
    <div class="pb-2">
      {answer}
    </div>
  </div>
</div>

