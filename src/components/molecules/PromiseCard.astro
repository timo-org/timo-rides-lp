---
import { Shield } from "@lucide/astro";

const {label, Icon, text, iconClass} = Astro.props;
---

<div class="flex flex-col justify-center items-center bg-white p-5 shadow-md rounded-xl space-y-3">
  <div class={`${iconClass} p-3 rounded-xl `}>
    <Icon size={30} />
  </div>
  <h3 class="text-lg font-semibold">{label}</h3>
  <p class="text-slate-500 text-center">{text}</p>
</div>