---


const {Icon, label, text} = Astro.props;
---

<div class="flex items-center justify-center gap-3 bg-white shadow rounded-lg p-2">
    <div class="bg-accent rounded-full p-3">   
        <Icon size={24} class="text-primary"/>
    </div>
    <div class="flex flex-col">
        <h2 class="text-primary font-bold">{label}</h2>
        <p class="text-slate-500">{text}</p>
    </div>
</div>